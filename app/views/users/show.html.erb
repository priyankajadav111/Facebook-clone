<p>
  <strong>First_name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last_name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>City:</strong>
  <%= @user.city %>
</p>
<h2>Posts</h2>
<% for post in @user.posts %>
    <ul>
      <li><%= post.post_content %></li>
  </ul>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %>
<%= link_to 'Add Post', user_posts_path(@user) %> 
<%= link_to 'Back', users_path %>