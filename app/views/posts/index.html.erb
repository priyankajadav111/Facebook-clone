<p id="notice"><%= notice %></p>

   <h1>Posts</h1>

   <table>
     <thead>
        <tr>
        <th>Body</th>
        <th>User</th>
        <th colspan="3"></th>
       </tr>
     </thead>

     <tbody>
       <% @posts.each do |post| %>
         <tr>
           <td><%= post.post_content %></td>
           <td><%= post.user.first_name %></td>
           <td><%= link_to 'Show user', [@user] %></td>
           <td><%= link_to 'Edit Post', edit_user_post_path(@user, post) %></td>
           <td><%= link_to 'Destroy Post', [@user, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
       <% end %>
      </tbody>
   </table>

   <br>

   <%= link_to 'New Post', new_user_post_path(@user) %>